<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.envivo.futbolenvivoyendirectopartidos">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.envivo.futbolenvivoyendirectopartidos.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>

        <activity android:name="com.envivo.futbolenvivoyendirectopartidos.ui.main.AboutActivity">
        </activity>
        <activity
            android:name="com.envivo.futbolenvivoyendirectopartidos.ui.main.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.envivo.futbolenvivoyendirectopartidos.ui.countries.CountriesActivity">
        </activity>
        <activity android:name="com.envivo.futbolenvivoyendirectopartidos.ui.leagues.LeaguesActivity">
        </activity>
        <activity android:name="com.envivo.futbolenvivoyendirectopartidos.ui.leagues.leaguedetail.LeagueDetailActivity">
        </activity>
        <activity
            android:name="com.envivo.futbolenvivoyendirectopartidos.ui.fixtures.fixturedetail.FixtureDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.envivo.futbolenvivoyendirectopartidos.ui.teams.teamdetail.TeamDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.envivo.futbolenvivoyendirectopartidos.ui.players.playerdetail.PlayerDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>